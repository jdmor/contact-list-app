<h1>Contact List</h1>

<button id='showSearchField'>Search</button>
<button id='showContacts'>List Contacts</button>
<button id='showNewContactForm'>Create Contact</button>

<form id='searchContacts' class='is-hidden'>
    <div>
      <label>
        <input id='searchTerm' type='search'>
      </label>
    </div>

    <div>
      <button type='submit'>Search</button>
    </div>
</form>

<div id='contactList' class='is-hidden'>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div id='contactDetails' class='is-hidden'>
</div>

<form id='createContact' class='is-hidden'>
  <div>
    <label name='first_name'>
      <b>First Name</b>
      <input id='contactFirstName' type='text'>
    </label>
  </div>

  <div>
    <label name='last_name'>
      <b>Last Name</b>
      <input id='contactLastName' type='text'>
    </label>
  </div>

  <div>
    <label name='email'>
      <b>Email</b>
      <input id='contactEmail' type='text'>
    </label>
  </div>

  <div>
    <label name='phone'>
      <b>Phone</b>
      <input id='contactPhone' type='text'>
    </label>
  </div>

  <div>
    <button type='submit'>Create</button>
  </div>
</form>